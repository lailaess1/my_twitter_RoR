<% email_ids = User.where(id: message.user_id) %>
    <% email_ids.each do |email_id| %>
    <% border_color = email_id.id == session[:user_id] ? "margin-bottom: 30px; border: solid #00ccff 2px; border-radius: 30px; float: right; text-align: right; " : "margin-bottom: 30px; border: solid #00cc00 2px; border-radius: 30px; float: left; text-align: left;" %>
    <article class="table row" > 
        <div  style="<%= border_color %>"  >
            <div><%= email_id.email %> &nbsp;&nbsp;  <span style="font-weight: normal;"><%= message.created_at %></span></div>
                
            <div ><b><%= message.body %></b><div>
            
        </div>
    </article>
<% end %>