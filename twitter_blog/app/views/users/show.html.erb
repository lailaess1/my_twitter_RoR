<% if session[:user_id] == @user.id %>
    <h1 style="margin-bottom: 20px;" ><%= @user.email %> : My tweets</h1>
<% else %>
    <div class="row">
        <h1 style="margin-bottom: 20px;" class="col-10"><%= @user.email %> all tweets</h1>
        <%# <a href="#" class="col-2 btn btn-primary">Send Message</a> %>
        <%= link_to "Send Message",  user_messages_path(@user), class: "col-2 btn btn-primary" %>
    </div>
<% end %>

<% if session[:user_id] == @user.id %>
<h2 style="margin-top: 50px; ">Add a tweet:</h2>
<%= render 'articles/form' %>
<% end %>

<%# <h2>tweets</h2> %>
<%= render @user.articles.order(updated_at: :desc) %>


