<h1>Nouveau Tweet</h1>

<%= form_with model:[@user, 
    @user.articles.build ] do |form| %>
    <div>
        <h6><%= @user.email %></h6><br>
      <%= form.text_area :body %><br>
      <% @article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit "Create Tweet" %>
    </div>
<% end %>
  